<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/test_animal_name"
        android:layout_width="115dp"
        android:layout_height="95dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="11dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/test_animal_tag"
        app:layout_constraintStart_toEndOf="@+id/test_animal_kind"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test_animal_kind"
        android:layout_width="60dp"
        android:layout_height="95dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/test_animal_name"
        app:layout_constraintStart_toEndOf="@+id/test_animal_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test_animal_id"
        android:layout_width="59dp"
        android:layout_height="95dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test_animal_tag"
        android:layout_width="121dp"
        android:layout_height="96dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>